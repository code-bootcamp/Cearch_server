{
  "order": 0,
  "index_patterns": ["lecture*"],
  "template": "lecture",
  "settings": {
    "analysis": {
      "analyzer": {
        "my_ngram_analyzer": {
          "tokenizer": "my_ngram_tokenizer"
        }
      },
      "tokenizer": {
        "my_ngram_tokenizer": {
          "type": "nGram",
          "min_gram": "1",
          "max_gram": "10"
        }
      }
    },
    "max_ngram_diff": "10"
  },
  "mappings": {
    "properties": {
      "user": {
        "type": "nested",
        "properties": {
          "name": {
            "type": "text",
            "analyzer": "my_ngram_analyzer",
            "search_analyzer": "standard"
          }
        }
      },
      "info": {
        "type": "nested",
        "properties": {
          "companyname": {
            "type": "text"
          },
          "department": {
            "type": "text"
          }
        }
      },
      "rating": {
        "type": "float"
      },
      "classTitle": {
        "type": "text",
        "analyzer": "my_ngram_analyzer",
        "search_analyzer": "standard"
      },
      "classDescription": {
        "type": "text",
        "analyzer": "my_ngram_analyzer",
        "search_analyzer": "standard"
      }
    }
  }
}
