{
  "order": 0,
  "index_patterns": ["qtboard*"],
  "template": "qtboard",
  "settings": {
    "analysis": {
      "analyzer": {
        "my_ngram_analyzer": {
          "tokenizer": "my_ngram_tokenizer",
          "filter": ["lowercase"]
        }
      },
      "tokenizer": {
        "my_ngram_tokenizer": {
          "type": "nGram",
          "min_gram": "2",
          "max_gram": "10"
        }
      }
    },
    "max_ngram_diff": "10"
  },
  "mappings": {
    "properties": {
      "title": {
        "type": "text",
        "analyzer": "my_ngram_analyzer"
      },
      "copycontents": {
        "type": "text",
        "analyzer": "my_ngram_analyzer"
      },
      "name": {
        "type": "text"
      },
      "createdat": {
        "type": "date"
      }
    }
  }
}
